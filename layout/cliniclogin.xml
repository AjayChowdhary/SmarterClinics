<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/primary_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="Receptionist Login"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textAlignment="center"
        android:background="@color/colorAccentLight"
        android:textColor="#000000"
        android:id="@+id/textViewlogin"
        android:layout_centerHorizontal="true"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewlogin">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageViewlogin"
        android:src="@drawable/app_logo"
        android:padding="12dp"
        android:textSize="14sp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_below="@+id/imageViewlogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="20sp"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_grey"
            android:background="@drawable/edittext_corner_curved"
            android:inputType="textEmailAddress"
            android:hint="Username"
            android:layout_alignParentStart="true"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

        <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="20sp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/light_grey"
        android:background="@drawable/edittext_corner_curved"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@id/input_email" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Login"
        android:background="@drawable/button_corner_curved"
        android:textSize="30sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp" />

</LinearLayout>
</RelativeLayout>
</ScrollView>
</RelativeLayout>